<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ssi.atucasa.RestaurantMenuActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/img"
        android:layout_width="85dp"
        android:layout_height="85dp"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img"
        android:layout_toRightOf="@+id/img"
        android:text="Restaurant"
        android:layout_marginLeft="5dp"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/food_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginLeft="5dp"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/img"
        android:text="Alitas de pollo"/>

    <TextView
        android:id="@+id/schedule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_type"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/img"
        android:text="Horario: 12:00 - 23:00"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/img"
        android:text="Av. Ramon Rivero Nro. 505"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/img"
        android:text="Telefono: 44253536"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/img"
        android:text="Abierto"/>


    <ListView
        android:layout_below="@+id/img"
        android:layout_marginTop="30dp"
        android:id="@+id/listMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ListView>


</RelativeLayout>
